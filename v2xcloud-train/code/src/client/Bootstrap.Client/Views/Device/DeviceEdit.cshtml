@model NavigatorBarModel
@{ ViewBag.Title = "编辑设备信息";
    Layout = "_Default"; }
@section css {
    <environment include="Development">
        <link href="~/lib/nestable2/jquery.nestable.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/nestable2/jquery.nestable.min.css" rel="stylesheet" />
    </environment>
    <link href="~/lib/treegrid/css/jquery.treegrid.css" rel="stylesheet" />
    <link href="~/lib/longbow-select/longbow-select.css" rel="stylesheet" />
    <link href="~/css/fa.css" rel="stylesheet" asp-append-version="true" />

    <style>
        img {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
        }
    </style>
}
@section javascript {
    <environment include="Development">
        <script src="~/lib/nestable2/jquery.nestable.js"></script>
        <script src="~/lib/bootstrap-3-typeahead/bootstrap3-typeahead.js"></script>
        <script src="~/lib/treegrid/js/jquery.treegrid.js"></script>
        <script src="~/lib/bootstrap-table/extensions/treegrid/bootstrap-table-treegrid.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/nestable2/jquery.nestable.min.js"></script>
        <script src="~/lib/bootstrap-3-typeahead/bootstrap3-typeahead.min.js"></script>
        <script src="~/lib/treegrid/js/jquery.treegrid.min.js"></script>
        <script src="~/lib/bootstrap-table/extensions/treegrid/bootstrap-table-treegrid.min.js"></script>
    </environment>
    <script src="~/lib/longbow-select/longbow-select.js"></script>
    <script type="text/javascript" src="~/js/echarts.min.js"></script>
    <script src="~/js/device_demo_Edit.js" asp-append-version="true"></script>

}

<form enctype="multipart/form-data" data-toggle="LgbValidate" data-valid-button=".btnSubmit">
    <input hidden id="id" value="@ViewBag.id" />
    <div class="row">
        <div class="row">
            <div class="form-group col-6">
                <label class="control-label">模块名称</label>
                <input id="device_name" name="device_name" class="form-control" placeholder="请输入名称" data-valid="true"  />
            </div>

            <div class="form-group col-6">
                <label class="control-label">模块类型</label>
                <input id="dev_type" name="dev_type" class="form-control" placeholder="请输入类型" data-valid="true"  />
            </div>

            <div class="form-group col-6">
                <label class="control-label">设备规格</label>
                <input id="device_specification" name="device_specification" class="form-control" placeholder="请输入类型" data-valid="true" />
            </div>

            <div class="form-group col-6">
                <label class="control-label">设备地点</label>
                <input id="device_location" name="device_location" class="form-control" placeholder="请输入类型" data-valid="true"  />
            </div>

            <div class="form-group col-6">
                <label class="control-label">模块状态</label>
                <input id="device_status" name="device_status" class="form-control" placeholder="请输入类型" data-valid="true"  />
            </div>

            <div class="form-group col-6">
                <label class="control-label">更新时间</label>
                <input id="update_time" name="update_time" class="form-control" placeholder="请输入类型" data-valid="true"  />
            </div>

        </div>
    </div>



    <div class="form-group row">
        <div class="col-sm-10">
            <span id="return_without_save_span" style="display: none">
                <span>没有保存，返回？</span>
                <a asp-action="DeviceList" class="btn btn-info">返回</a>
                <a href="#"
                   class="btn btn-primary"
                   onclick="cancelback()">
                    否
                </a>
            </span>

            <span id="return_without_save_button">
                <a href="#" class="btn btn-danger" onclick="return_without_save()">返回</a>
            </span>

            <button type="button" id="btn_update_submit" class="btn btn-primary">更新</button>
        </div>
    </div>

</form>
