@model NavigatorBarModel
@{ ViewBag.Title = "编辑公司信息";
    Layout = "_Default"; }
@section css {
    <environment include="Development">
        <link href="~/lib/nestable2/jquery.nestable.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/nestable2/jquery.nestable.min.css" rel="stylesheet" />
    </environment>
    <link href="~/lib/treegrid/css/jquery.treegrid.css" rel="stylesheet" />
    <link href="~/lib/longbow-select/longbow-select.css" rel="stylesheet" />
    <link href="~/css/fa.css" rel="stylesheet" asp-append-version="true" />
}
@section javascript {
    <environment include="Development">
        <script src="~/lib/nestable2/jquery.nestable.js"></script>
        <script src="~/lib/bootstrap-3-typeahead/bootstrap3-typeahead.js"></script>
        <script src="~/lib/treegrid/js/jquery.treegrid.js"></script>
        <script src="~/lib/bootstrap-table/extensions/treegrid/bootstrap-table-treegrid.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/nestable2/jquery.nestable.min.js"></script>
        <script src="~/lib/bootstrap-3-typeahead/bootstrap3-typeahead.min.js"></script>
        <script src="~/lib/treegrid/js/jquery.treegrid.min.js"></script>
        <script src="~/lib/bootstrap-table/extensions/treegrid/bootstrap-table-treegrid.min.js"></script>
    </environment>
    <script src="~/lib/longbow-select/longbow-select.js"></script>
    <script type="text/javascript" src="~/js/echarts.min.js"></script>
    <script src="~/js/companyedit.js" asp-append-version="true"></script>
}


<form enctype="multipart/form-data" data-toggle="LgbValidate" data-valid-button=".btnSubmit">
    <input hidden id="id" value="@ViewBag.id" />
    <div class="row">
        <div class="form-group col-6">
            <label class="control-label">公司代码</label>
            <input id="company_code" name="company_code" class="form-control" placeholder="请输入公司代码" data-valid="true" />
        </div>

        <div class="form-group col-6">
            <label class="control-label">公司名称</label>
            <input id="name" name="name" class="form-control" placeholder="请输入公司名称" data-valid="true" />
        </div>

        <div class="form-group col-6">
            <label class="control-label">地址</label>
            <input id="address" name="address" class="form-control" placeholder="请输入地址" data-valid="true" />
        </div>

        <div class="form-group col-6">
            <label class="control-label">corpid</label>
            <input id="corpid" name="corpid" class="form-control" placeholder="请输入corpid" data-valid="true" />
        </div>

        <div class="form-group col-6">
            <label class="control-label">corpsecret</label>
            <input id="corpsecret" name="corpsecret" class="form-control" placeholder="请输入corpsecret" data-valid="true" />
        </div>

        <div class="form-group col-6">
            <label class="control-label">agentid</label>
            <input id="agentid" name="agentid" class="form-control" placeholder="请输入agentid" data-valid="true" />
        </div>

        @*<div class="form-group col-6">
            <label class="control-label">agent_secrete</label>
            <input id="agent_secrete" name="agent_secrete" class="form-control" placeholder="请输入agent_secrete" data-valid="true" />
        </div>*@

        <div class="form-group col-6">
            <label class="control-label">permanent_code</label>
            <input id="permanent_code" name="permanent_code" class="form-control" placeholder="请输入permanent_code" data-valid="true" />
        </div>

        <div class="form-group col-6">
            <label class="control-label">corpid_open</label>
            <input id="corpid_open" name="corpid_open" class="form-control" placeholder="请输入corpid_open" data-valid="true" />
        </div>


    </div>



    <div class="form-group row">
        <div class="col-sm-10">
            <span id="return_without_save_span" style="display: none">
                <span>没有保存，返回？</span>
                <a asp-action="CompanyList" class="btn btn-info">返回</a>
                <a href="#"
                   class="btn btn-primary"
                   onclick="cancelback()">
                    否
                </a>
            </span>
            <span id="return_without_save_button">
                <a href="#" class="btn btn-danger" onclick="return_without_save()">返回</a>
            </span>

            <button type="button" id="btn_update_submit" class="btn btn-primary">更新</button>
        </div>
    </div>

</form>

